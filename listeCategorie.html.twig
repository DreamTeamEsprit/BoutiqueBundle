{% extends "SanteUserBundle::layout1.html.twig" %}

{% block body %}

    <div id="content">
        <div id="content-header">
            <div id="breadcrumb"><a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a
                        href="{{ path('listeCategorie') }}" class="current">List Des Categories</a></div>
            <h1>Gestion Categorie</h1>
        </div>
        <div class="container-fluid">
            <hr>
            <div class="row-fluid">
                <div class="span12">
                    <a class="btn btn-inverse pull-right" href="{{ path('AjoutCategorie') }}">Ajouter <i
                                class="fa fa-plus-square"
                                aria-hidden="true"></i></a>
                    <div class="widget-box">
                        <div class="widget-content nopadding">
                            <table class="table table-bordered data-table">
                                <thead>
                                <tr>

                                    <th style="color: #0e90d2">Id</th>
                                    <th style="color: #0e90d2">libelle</th>
                                    <th style="color: #0e90d2">description</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for pr in ev %}
                                    <tr>

                                        <td>{{ pr.id }}</td>
                                        <td>{{ pr.libelle }}</td>
                                        <td>{{ pr.description }}</td>



                                        <td>
                                            <a href="{{ path('modifierCategorie',{'id':pr.id}) }}"
                                               style="color: #428bca;">
                                                <i class="fa fa-edit fa-2x"></i></a>

                                            <a href="{{ path('supprimerCategorie',{'id':pr.id}) }}"
                                               style="color: red"><i class="fa fa-trash-o fa-2x"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}